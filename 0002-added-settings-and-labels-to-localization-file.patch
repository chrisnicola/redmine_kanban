From: chris <chris@i0-linux.localdomain>
Date: Mon, 12 Oct 2009 12:23:33 -0700
Subject: [PATCH] added settings and labels to localization file

---
 config/locales/en.yml |    5 +++--
 init.rb               |    8 +++++++-
 lang/en.yml           |    5 +++++
 3 files changed, 15 insertions(+), 3 deletions(-)

diff --git a/config/locales/en.yml b/config/locales/en.yml
index faef9be..d9c9d0f 100644
--- a/config/locales/en.yml
+++ b/config/locales/en.yml
@@ -21,10 +21,11 @@ en:
   kanban_label_active_pane: Active
   kanban_label_testing_pane: Testing
   kanban_label_finished_pane: Finished
-  kanban_label_defects: Defects
+  kanban_label_defect: Defects
   kanban_label_architecture: Architecture
-  kanban_label_features: Features
+  kanban_label_feature: Features
   kanban_label_technicaldebt: Technical Debt
+  kanban_label_color: Color
   kanban_label_limit: Maximum number of items
   kanban_label_day_limit: Number of days
 
diff --git a/init.rb b/init.rb
index 12b199c..a1dd943 100644
--- a/init.rb
+++ b/init.rb
@@ -37,7 +37,13 @@ Redmine::Plugin.register :redmine_kanban do
                'active' => { 'status' => nil, 'limit' => 5},
                'testing' => { 'status' => nil, 'limit' => 5},
                'finished' => {'status' => nil, 'limit' => 7}
-             }
+             },
+             'category' => {
+               'feature' => { 'tracker' => nil, 'color' => nil},
+               'defect' => { 'tracker' => nil, 'color' => nil},
+               'architecture' => { 'tracker' => nil, 'color' => nil},
+               'technicaldebt' => { 'tracker' => nil, 'color' => nil}
+            }
            })
   
   menu(:top_menu,
diff --git a/lang/en.yml b/lang/en.yml
index 3739e01..098d3d7 100644
--- a/lang/en.yml
+++ b/lang/en.yml
@@ -19,6 +19,11 @@ kanban_label_quick-tasks_pane: Quick Tasks
 kanban_label_active_pane: Active
 kanban_label_testing_pane: Testing
 kanban_label_finished_pane: Finished
+kanban_label_defect: Defects
+kanban_label_architecture: Architecture
+kanban_label_feature: Features
+kanban_label_technicaldebt: Technical Debt
+kanban_label_color: Color
 kanban_label_limit: Maximum number of items
 
 kanban_label_staff_role: Role to use for Staffed Requests
